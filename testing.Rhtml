# calculate EV
calc_ev = function(N, p = NA){
  
  # p^N + (N + 1)* (1-p^N) = N
  if (is.na(p)){
    p = prob_threshold(N)
  }
  p = 1 - p
  test_dist = polynomial(coef=c(rep(0,N), 1)) + (N+1) * (1-polynomial(coef=c(rep(0,N), 1)))
  #print(test_dist)
  sum(as.numeric(test_dist) * p^(0:N))
}

