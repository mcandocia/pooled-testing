# calculate threshold for highest p for improvement
prob_threshold = function(N){
  
  # p^N + (N + 1)* (1-p^N) = N
  test_dist = polynomial(coef=c(rep(0,N), 1)) + (N+1) * (1-polynomial(coef=c(rep(0,N), 1))) - N
  #print(test_dist)
  1 - filter_solution(solve(test_dist))
